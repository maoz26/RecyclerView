<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.maoztamir.todo.CreateTaskActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f6f6"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Write down the description of the task"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:background="#b8b1b1"
            android:padding="@dimen/abc_action_bar_content_inset_material" />


        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginTop="@dimen/abc_action_bar_content_inset_material" />

        <Button
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:text="Create"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.08"
            android:layout_marginTop="@dimen/abc_action_bar_progress_bar_size" />

    </LinearLayout>
</RelativeLayout>
